<%= form_for(:user) do |f|%>

    <%= f.label :username %>
     <%= f.text_field :username, placeholder: "Enter username" %>
  
     <%= f.label :email %>
     <%= f.text_field  :email, placeholder: "example@gmail.com" %>
  
     <%= f.label :password %>
     <%= f.password_field :password %>
  
     <%= f.label :confirm_password %>
     <%= f.password_field :confirm_password %>
  
     <%= f.submit("Update User") %>
    <% end %>